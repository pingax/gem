# Template file for 'Graphical Emulators Manager'
pkgname=gem
version=0.7.1
revision=1
build_style=python3-module
pycompile_module="${pkgname}"
hostmakedepends="python3-setuptools python3-gobject"
depends="python3-setuptools python3-gobject python3-xdg"
short_desc="GUI to manage roms and emulators under GNU/Linux"
maintainer="PacMiam <pacmiam@tuxfamily.org>"
license="GPL-3"
homepage="https://gem.tuxfamily.org"
distfiles="https://download.tuxfamily.org/gem/releases/${pkgname}-${version}.tar.xz"
checksum=deb8096f01d5fd0e9d567d8253b1993b66be4914ab644ccda42c8449be9059d5

post_install() {
    vinstall gem/ui/icons/gem.svg 644 usr/share/pixmaps/
    vinstall gem.desktop 644 usr/share/applications/
}
